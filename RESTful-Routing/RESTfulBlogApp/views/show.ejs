<% include ./partials/header %>
<div class="ui main text container segment"> <!--Adding the Semantic UI class-->
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached"> <!--This Semantic UI class puts border around its contents-->
       <div class="item">
           <img class="ui centered rounded image" src="<%= blog.image %>" > <!--The image gets centered in the block-->
           <div class="content">
               <span><%= blog.created.toDateString() %></span>
           </div>
           <div class="description">
                <p><%= blog.body %></p>
           </div>
           <a class="ui green basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
           <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>  
           </form>
       </div> 
    </div>
</div>
<% include ./partials/footer %>