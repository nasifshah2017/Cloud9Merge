<% include ./partials/header %>
<div class="ui main text container segment"> <!--Adding the Semantic UI class-->
    <div class="ui huge header">Edit <%= blog.title %></div> <!-- Extracting the blog's title and displaying it -->
    <!--HTML doesn't have the way to handle a "PUT" request, thats why the following way is the work around, we need to npm install 
    method-override --save-->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class=field>
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>"> <!--"value" pre-fills the field with what is passed in-->
        </div>
        <div class=field>
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class=field>
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea> <!--The "value" thing doesn't work for textarea instead we need to
                                                                        the object in between the textarea tags-->
        </div>
        <input class="ui blue big basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>